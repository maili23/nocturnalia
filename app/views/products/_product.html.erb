<div class="col-sm-6 col-md-3 lst-box">
  <%= image_tag(product.image_url, class: "img-responsive img-catalog") %>
  <a href="#"><h4><%= product.name %></h4></a>
  <p><%= product.description %></p>
  <p><%= product.color %></p>
  <p><strong><%= product.price %></strong></p>
  <h5><%= link_to 'Show', product %> | 
  <%= link_to 'Edit', edit_product_path(product) %> | 
  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></h5>
</div>