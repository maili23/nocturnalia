<% if signed_in? %>
  <h4>Agrega tus comentarios:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comentarios" %><br>
      <%= f.text_area :body, class: "comments-text" %>
    </p>
    <p><div class="rating"></div></p>
    <p>
      <%= f.submit "Agregar", class: "btn btn-info btn-lg" %>
    </p>
  <% end %>
<% end %>
