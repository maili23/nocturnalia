<% content_for(:title, "Crear Cuenta") %>

<div class="col-sm-6 col-sm-offset-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group user-form">
    <%= f.label :email, class: "sr-only"   %>
    <%= f.email_field :email, autofocus: true, class: "form-control user-input", placeholder: "Correo electrónico" %>
  </div>

  <div class="form-group user-form">
    <%= f.label :password, class: "sr-only"   %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control user-input", placeholder: "Contraseña" %>
  </div>

  <div class="form-group user-form">
    <%= f.label :password_confirmation, class: "sr-only"   %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control user-input", placeholder: "Confirmación de contraseña" %>
    <% if @minimum_password_length %>
    <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Crear Cuenta", class: "btn btn-info btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
